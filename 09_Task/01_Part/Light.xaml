<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Foreground" Value="Black"/>
        <Setter Property="Control.Background" Value="Transparent"/>
        <Setter Property="Control.BorderBrush" Value="Transparent"/>
    </Style>
    <Style TargetType="Menu" BasedOn="{StaticResource WindowStyle}"/>
    <Style TargetType="MenuItem" BasedOn="{StaticResource WindowStyle}"/>
    <Style TargetType="TextBlock" BasedOn="{StaticResource WindowStyle}"/>
    <Style TargetType="TextBox" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="BorderBrush" Value="White"/>
    </Style>
    <Style TargetType="ToolBarTray" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Background" Value="#FFD0ECFF"/>
    </Style>
    <Style TargetType="ToolBar" BasedOn="{StaticResource WindowStyle}"/>
    <Style TargetType="Grid" BasedOn="{StaticResource WindowStyle}"/>
    <Style TargetType="ComboBoxItem" BasedOn="{StaticResource WindowStyle}"/>
    <Style TargetType="ComboBox" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Background" Value="Gold"/>
    </Style>


</ResourceDictionary>