            <Button Content="2" Margin="1" Padding="5" Background="White"/>
            <Button Content="3" Margin="1" Padding="5" Background="White"/>
            <Button Content="+" Margin="1" Padding="5"/>
            <Button Content="+/-" Margin="1" Padding="5" Background="White"/>
            <Button Content="0" Margin="1" Padding="5" Background="White"/>
            <Button Content="," Margin="1" Padding="5" Background="White"/>
            <Button Content="=" Margin="1" Padding="5"/>
        </UniformGrid>
        <TextBox Text="1 234,567" 
                 Grid.Row="0" 
                 Margin="5" 
                 TextWrapping="Wrap" 
                 FontSize="36"
                 HorizontalContentAlignment="Right"
                 VerticalContentAlignment="Bottom" 
                 Background="#FFE2F3EC">
        </TextBox>
    </Grid>
</Window>
